@using AraBulNakliyat.Entities
@model List<Notice>
@{
    ViewBag.Title = "Index";
}
<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Kategoriler -->
        <div class="col-md-3">
            @Html.Partial("_PartialCity")
        </div>

        <div class="col-md-9">
            <!-- Carousel -->
            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="https://images.unsplash.com/photo-1581573833610-487d80de9aab?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1315&q=80" alt="">
                            </div>
                            <div class="item ">
                                <img class="slide-image" src="https://image.shutterstock.com/image-photo/loaded-european-truck-on-motorway-600w-1182455494.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://cdn.pixabay.com/photo/2019/12/15/18/47/highway-4697840_960_720.jpg" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="https://image.shutterstock.com/image-photo/road-freight-industry-logistics-cargo-600w-1164027223.jpg" alt="">
                            </div>

                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>


            <!-- Yazılar  -->
            <div class="row">

                @foreach (Notice notice in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4" data-notice-id="@notice.Id">
                        <div class="thumbnail">
                       
                            <img src="http://placehold.it/320x150" alt="@notice.Title">
                            <div class="caption">
                                <h4 class="pull-right">$24.99</h4>
                                <h4>
                                    <a href="#">@notice.Title </a>
                                </h4>

                                <h6 class="text-right">

                                    @notice.Owner.UserName  <span class="glyphicon glyphicon-user"></span> <br />

                                    @notice.ModifiedOn.ToString("dd.MM.yy HH:mm") <span class="glyphicon glyphicon-time"></span>

                                </h6>



                                @if (string.IsNullOrEmpty(notice.Text) == false && notice.Text.Length > 70)
                                {
                                    <p> @(notice.Text.Substring(0, 70) + "...")</p>
                                    <p class="pull-right">
                                        <a href="#" data-toggle="modal" data-target="#modal_noticedetail" data-notice-id="@notice.Id" class="btn btn-default btn-sm ">
                                            devamı
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </p>
                                }
                                else
                                {
                                    <p> @notice.Text</p>
                                }



                            </div>

                            <div class="ratings">
                                <p class="pull-right">
                                    <button class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal_comment" data-notice-id="@notice.Id">
                                        <span class="glyphicon glyphicon-comment"></span> Yorumlar
                                    </button>
                                </p>
                                <p>

                                    <button class="btn btn-default btn-sm" type="button" data-liked="false" data-notice-id="@notice.Id">
                                        <span class="glyphicon glyphicon-star-empty     like-star"></span> &nbsp;
                                        <span class="like-count">@notice.LikeCount</span>
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>


                }


            </div>
        </div>
    </div>
</div>
@section footer
{
    @Html.Partial("_PartialFooter")
}
<!-- Modal comment-->
<div class="modal fade" id="modal_comment" name="modal_comment" tabindex="-1" role="dialog" aria-labelledby="modal_comment_label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="modal_comment_header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal_comment_label">Yorumlar</h4>
            </div>
            <div class="modal-body" id="modal_comment_body">

            </div>
            <div class="modal-footer" id="modal_comment_footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">  Kapat </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal note detail-->
<div class="modal fade" id="modal_noticedetail" name="modal_noticedetail" tabindex="-1" role="dialog" aria-labelledby="modal_noticedetail_label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="modal_noticedetail_header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal_noticedetail_label">Not Detayı</h4>
            </div>
            <div class="modal-body" id="modal_noticedetail_body">

            </div>
            <div class="modal-footer" id="modal_noticedetail_footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">  Kapat </button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/comment.js"></script>
<script src="~/Scripts/like.js"></script>
<script src="~/Scripts/NoticeDetail.js"></script>